<h1>Hello, <%= current_user.username %></h1>
<h2>Recent Posts</h2>
<br><br>

<div class="container-fluid bg-3 text-center">
  <% @posts.each do |post| %>
  <div class="row">
    <div class="col-sm-3">
      <a href="/users/<%= post.user.id %>"><%= post.user.username%></a>
      <img src="/images/post/<%= post.post_photo%>" style="width:100%">
      <a href="/posts/<%= post.id%>"><%= post.caption %></a><br><br>
    </div>
  <% end %>
</div><br>
